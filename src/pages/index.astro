---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

import Logo from './logo.svg';
import background from './background.webp';
---

<Layout title="Welcome to Astro.">
  <div class="container">
    <div class="content">
      <div class="logo">
        <Logo/>
      </div>
      <div class="about">
        <div class="title">
          Dapatkan pelajaran pemrograman gratis untuk anak Anda dalam 4 langkah
        </div>
        <div class="description">
          <p>üë¶üèΩ Untuk anak usia 5-17 tahun</p>
          <p>üñ•Ô∏è Membuat proyek IT kecil pertamanya</p>
          <p>ü•á Membahas pengalaman dan hobi anak</p>
        </div>
        <button>Mulai</button>
      </div>
    </div>
  </div>
</Layout>

<style>
  .container {
    position: relative;
    height: 100%;

    background: linear-gradient(
      0deg,
      rgba(230, 230, 230, 0.5),
      rgba(230, 230, 230, 0.5)
    ), rgba(250, 243, 255, 0.2);

    &:before {
      content: '';
      display: block;
      width: 100%;
      height: 100%;

      position: absolute;
      right: 0;
      bottom: 0;

      background: url(/background.webp) no-repeat;
      background-position: bottom right;
      background-size: cover;

      pointer-events: none;
    }
  }

  .content {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 1160px;
    margin: 0px auto;
  }

  .logo {
    position: relative;
    margin-right: 113px;
    height: 33px;
    color: white;
    padding-left: 4px;

    &:before {
      content: "";
      display: block;
      width: 173px;
      height: 215px;
      position: absolute;
      bottom: -75px;
      left: 5px;
      background: rgb(96, 43, 122);
      transform: rotate(34.34deg);
    }

    &:after {
      content: "";
      display: block;
      width: 132px;
      height: 33px;
      background: url(/logo.svg) no-repeat;
      position: relative;
      top: 25px;
    }
  }

  .about {
    margin: auto 0px;
    padding: 162px 0px 0px;
  }

  .title {
    margin-bottom: 12px;
    width: 517px;
    font-size: 48px;
    line-height: 52px;
    font-weight: 700;
  }

  .description {
    padding-bottom: 24px;
  }

  p {
    margin: 0px;
    color: rgb(15, 28, 44);
    font-family: "Cera CY", Helvetica, Arial, sans-serif;
    font-size: 18px;
    line-height: 24px;
    padding-bottom: 8px;
  }

  button {
    display: inline-flex;
    flex-shrink: 0;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    cursor: pointer;
    font-family: "Cera CY", Helvetica, Arial, sans-serif;
    font-size: 18px;
    line-height: 24px;
    height: 48px;
    background-color: rgb(131, 58, 224);
    color: rgb(255, 255, 255);
    border-width: initial;
    border-style: none;
    border-color: initial;
    border-image: initial;
    outline: none;
    transition: color 0.2s ease 0s, background-color;
    margin: 0px;
    padding: 0px 24px;
    border-radius: 12px;
    width: 341px;
  }
</style>
