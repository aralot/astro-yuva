---
import Button from '../button';
import Steps from './steps';
---

<div>
  <Button id="button" style="width: 341px" size="large">Mulai</Button>
  <div id="popup" class="popup">
    <div id="popup-backdrop" class="popup-backdrop"></div>
    <div id="popup-wrapper" class="popup-wrapper">
      <div class="popup-content">
        <Steps client:only="react" />
      </div>
    </div>
  </div>
</div>

<script>
  const button = document.getElementById('button');
  const popup = document.getElementById('popup');
  const popupBackdrop = document.getElementById('popup-backdrop');
  const popupWrapper = document.getElementById('popup-wrapper');

  button.addEventListener('click', () => {
    popup.classList.add('is-visible');
  });

  popupBackdrop.addEventListener('click', (event) => {
    if (event.target === event.currentTarget) {
      popup.classList.remove('is-visible');
    }
  });

  if (window.matchMedia("(min-width: 75em)").matches) {
    popupBackdrop.appendChild(popupWrapper);
  };
</script> 

<style>
  .popup-backdrop {
    align-items: center;
    background-color: rgba(0, 0, 0, 0.3);
    display: none;
    height: 100%;
    left: 0px;
    overflow: hidden scroll;
    place-content: center;
    position: fixed;
    top: 0px;
    width: 100%;
  }

  .popup-wrapper {
    background: rgb(255, 255, 255);
    border-radius: 12px 12px 0 0;
    bottom: 0;
    box-shadow: rgba(0, 0, 0, 0.2) 0px 20px 28px -8px;
    display: flex;
    flex-direction: column;
    left: 0;
    margin: auto;
    position: fixed;
    top: 24px;
    transform: translateY(100%);
    transition: transform 0.3s cubic-bezier(0.5, 0, 0.7, 1) 0s; 
    width: 100%;

    @media (min-width: 75em) {
      border-radius: 12px;
      position: relative;
      width: max-content;
      padding: 28px 28px 16px;
      transform: translateY(0);
      display: none;
    }
  }

  .is-visible .popup-backdrop {
    display: flex;
    opacity: 1; 
  }

  .is-visible .popup-wrapper {
    transform: translateY(0);

    @media (min-width: 75em) {
      display: flex;
    }
  }

  .popup-content {
    padding: 24px 16px 16px;
    flex-grow: 1;

    @media (min-width: 75em) {
      padding: 0;
      min-width: 390px;
      min-height: 533px;
    }
  }
</style>
