---
import Icon from 'astro-icon';

import Layout from '../../../layouts/Layout.astro';
---

<Layout title="Jawablah beberapa pertanyaan dan dapatkan kelas coding gratis untuk anak Anda">
  <div class="container">
    <div class="content">
      <div class="logo">
        <Icon name="logo" />
      </div>
      <div class="about">
        <slot />
      </div>
    </div>
  </div>
</Layout>

<style>
  [astro-icon] {
     height: 33px;
     position: relative;
     top: 25px;
     width: 132px;
  }

  .container {
    position: relative;
    height: 100%;

    background: linear-gradient(
      0deg,
      rgba(230, 230, 230, 0.5),
      rgba(230, 230, 230, 0.5)
    ),
    linear-gradient(0deg, rgba(250, 243, 255, 0.2), rgba(250, 243, 255, 0.2)),
    #ffffff;

    @media (min-width: 1200px) {
      background: linear-gradient(
        0deg,
        rgba(230, 230, 230, 0.5),
        rgba(230, 230, 230, 0.5)
      ), rgba(250, 243, 255, 0.2);

      &:before {
        content: '';
        display: block;
        width: 100%;
        height: 100%;

        position: absolute;
        right: 0;
        bottom: 0;

        background: url(/background.webp) no-repeat;
        background-position: bottom right;
        background-size: cover;

        pointer-events: none;
      }
    }
  }

  .content {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;

    @media (min-width: 1200px) {
      width: 1160px;
      margin: 0px auto;
    }
  }

  .logo {
    height: 58px;
    color: #602b7a;
    padding-left: 20px;

    @media (min-width: 1200px) {
      position: relative;
      margin-right: 113px;
      height: 33px;
      color: white;
      padding-left: 4px;

      &:before {
        content: "";
        display: block;
        width: 173px;
        height: 215px;
        position: absolute;
        bottom: -75px;
        left: 5px;
        background: rgb(96, 43, 122);
        transform: rotate(34.34deg);
      }
    }

  }

  .about {
    margin: auto 0px;
    padding: 0 20px;

    @media (min-width: 1200px) {
      max-width: 364px;
      padding: 162px 0px 0px;
    }
  }

  .title {
    margin-bottom: 16px;
    font-weight: 700;
    font-size: 24px;
    line-height: 30px;

    @media (min-width: 1200px) {
      margin-bottom: 12px;
      width: 517px;

      font-size: 48px;
      line-height: 52px;
    }
  }

  .description {
    padding-bottom: 24px;
  }
</style>
